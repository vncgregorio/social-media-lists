<%= form_tag social_media_lists_index_path, method: :get do %>
<div class="row">
  <div class="col-md-9">
    <%= text_field_tag :content, params[:content], :placeholder => t('views.actions.content'), :class => "form-control", :id => 'content' %>
  </div>
  <div class="col-md-1">
    <div class="form-group">
      <em><%= t('views.actions.per_page') %></em>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <%= select_tag :per_page, options_for_select([["10", "10"], ["25", "25"], ["50", "50"]], params[:per_page].present? ? params[:per_page] : "10"), {:class => "chosen-select"} %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= text_field_tag :initial_date, params[:initial_date], :placeholder => t('views.actions.initial_date'), :class => "form-control datepicker" %>
  </div>
  <div class="col-md-6">
    <%= text_field_tag :final_date, params[:final_date], :placeholder => t('views.actions.final_date'), :class => "form-control datepicker" %>
  </div>
</div>
<div class="row top-buffer">
  <div class="col-md-12">
    <h4><%= t('views.filters.networks') %></h4>
  </div>
</div>
<div class="row">
  <% @networks.each do |network| %>
  <div class="col-md-2">
    <div class="checkbox c-checkbox needsclick">
      <label class="needsclick">
        <%= check_box_tag "networks[]", network.id, network_checked?(network), :class => "needsclick check_option" %>
        <%= network.name %>
      </label>
    </div>
  </div>
  <% end %>
</div>
<div class="row top-buffer">
  <div class="col-md-12">
    <h4><%= t('views.filters.lists') %></h4>
  </div>
</div>
<div class="row">
    <% @lists.each do |list| %>
    <div class="col-md-3">
      <div class="checkbox c-checkbox needsclick">
        <label class="needsclick">
          <%= check_box_tag "lists[]", list.id, list_checked?(list), :class => "needsclick check_option" %>
          <%= list.name %>
        </label>
      </div>
    </div>
    <% end %>
</div>
<div class="row top-buffer">
  <div class="offset-md-10 col-md-2">
    <%= button_tag "<i class='fa fa-filter'></i> #{t('views.actions.filter')}".html_safe, :name => "filter", :type => "submit", :class => "btn btn-primary form-control input-block-level" %>
  </div>
</div>
<div class="row top-buffer">
  <div class="offset-md-5 col-md-2">
    <small>
      <i>
        <%= @unpaginated_posts.size %> <%= t('views.filters.records') %>
      </i>
    </small>
  </div>
</div>
<% end %>
<hr>
