<%= content_for :javascript do %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha256-bqVeqGdJ7h/lYPq6xrPv/YGzMEb6dNxlfiTUHSgRCp8=" crossorigin="anonymous"></script>
  <script>
    $(function(){
      $('.datepicker').datepicker({
        format: 'yyyymmdd',
        todayHighlight: true
      });
    });
  </script>
<% end %>
<%= content_for :style do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha256-siyOpF/pBWUPgIcQi17TLBkjvNgNQArcmwJB8YvkAgg=" crossorigin="anonymous" />
<% end %>
<div class="container">

  <h2 class="my-4"><%= t('views.filters.title') %></h2>

  <%= render :partial => 'social_media_lists/partials/filter' %>

  <h2 class="my-4"><%= t('views.posts.title') %></h2>

  <% @posts.each do |post| %>
    <%= render :partial => 'social_media_lists/partials/post', :locals => {:post => post} %>
  <% end %>

  <div class="row">
    <div class="offset-md-4 col-md-4">
      <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>

</div>
